{
	"name": "AMBOSS",
	"version": "0.0.1",
	"description": "AMBOSSIFY the medical terms in a website",
	"homepage_url": "https://www.amboss.com",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
	  	"https://storage.googleapis.com/*",
	  	"https://cdn.segment.com/*",
		"storage",
	  	"tabs",
	  	"webNavigation"
	],
  	"content_security_policy": "script-src 'unsafe-eval' 'self' https://cdn.segment.com https://js.intercomcdn.com/ https://widget.intercom.io/widget/ https://www.google-analytics.com/; object-src 'self'",
	"options_ui": {
		"chrome_style": true,
		"page": "options-ui-page.html"
	},
	"browser_action": {
	  "browser_style": true,
	  "default_title": "AMBOSS",
	  "default_popup": "browser-action-page.html"
	},
	"content_scripts": [
	  {
		"exclude_globs": [
		  "*:*.paypal.*/*",
		  "*:*.amboss.*/*",
		  "*:*medicuja.*/*",
		  "*:*google.*/*",
		  "*:*ecosia.*/*",
		  "*:duckduckgo.*/*",
		  "*:mail.yahoo.com/*",
		  "*:*.hotmail.*/*",
		  "*:*.outlook.com/*",
		  "*:*.icloud.*/*"
		],
		"matches": ["*://*/*"],
		"css": ["content-script-styles.css"],
		"js": ["browser-polyfill.min.js","content-script.js"]
	  }
	],
	"background": {
		"persistent": false,
		"page": "background-page.html"
	}
}
